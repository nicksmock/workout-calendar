# =============================================================================
# Olympic Workout Calendar - Environment Configuration
# =============================================================================
# Copy this file to .env and update the values for your environment

# =============================================================================
# Domain Configuration (for Traefik)
# =============================================================================
DOMAIN=workout.yourdomain.com

# =============================================================================
# Database Configuration
# =============================================================================
POSTGRES_DB=workout_calendar
POSTGRES_USER=workout_user
POSTGRES_PASSWORD=change_this_secure_password_123
DB_HOST=postgres
DB_PORT=5432

# =============================================================================
# Backend API Configuration
# =============================================================================
NODE_ENV=production
PORT=3001
HOST=0.0.0.0

# JWT Authentication
JWT_SECRET=change_this_to_a_very_long_random_string_min_32_chars_123456789
JWT_EXPIRES_IN=7d

# CORS Configuration
CORS_ORIGIN=https://workout.yourdomain.com

# =============================================================================
# Frontend Configuration
# =============================================================================
# This gets baked into the build, so rebuild if you change it
VITE_API_URL=https://workout.yourdomain.com/api

# =============================================================================
# Traefik Configuration
# =============================================================================
# Change these to match your Traefik setup
TRAEFIK_ENTRYPOINT=https
TRAEFIK_CERTRESOLVER=cloudflare
